<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.itechgenie.apps.geniewpmatrimony.ManualConfigActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:text="Enter URL with appropriate (context if applicable )" />

    <EditText
        android:id="@+id/manualWebPageURLId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="100dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/manualWebPageBtnId"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:text="@string/web_page_go"
        android:onClick="onClickGo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingTop="100dp">

        <WebView android:id="@+id/webView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>

</RelativeLayout>